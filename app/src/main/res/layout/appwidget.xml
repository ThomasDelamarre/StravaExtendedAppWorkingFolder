<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/transparentGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/redirect_to_app"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/spacer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="7dp"/>

            <LinearLayout
                android:id='@+id/linear_layout_2'
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:gravity="top|center_horizontal">

                <TextView
                    android:id="@+id/x_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textSize="38dp"
                    android:fontFamily="@android:roboto"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="km"
                    android:textColor="@android:color/black"
                    android:textSize="23dp" />

            </LinearLayout>

            <LinearLayout
                android:id='@+id/linear_layout_3'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="0dp"
                android:gravity="bottom|center_horizontal">

                <TextView
                    android:id="@+id/display_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:textColor="@android:color/black"
                    android:textAllCaps="true"
                    android:textSize="11dp"/>

            </LinearLayout>

            <LinearLayout
                android:id='@+id/linear_layout_4'
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/barchart"
                    android:layout_width="280dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/spacer2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id='@+id/linear_layout_5'
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/swim_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/swim"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/ride_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/bike"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/run_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/run"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/all_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/triathlon"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id='@+id/linear_layout_1'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/strava"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/stravalogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/refresh"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

</RelativeLayout>